<h1>Listing searches</h1>

<table>
  <tr>
    <th>Term</th>
    <th>Last queried</th>
    <th>Pages retrieved</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @searches.each do |search| %>
  <tr>
    <td><%= search.term %></td>
    <td><%= search.last_queried %></td>
    <td><%= search.pages_retrieved %></td>
    <td><%= link_to 'Show', search %></td>
    <td><%= link_to 'Edit', edit_search_path(search) %></td>
    <td><%= link_to 'Destroy', search, :confirm => 'Are you sure?', :method => :delete %>
    <td><%= link_to 'Show on map', view_map_search_path(search) %></td>
  </tr>
<% end %>
</table>

